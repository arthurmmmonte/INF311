<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/name_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:layout_below="@+id/name_box"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/age_box"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:layout_below="@+id/name_box"
        android:layout_toEndOf="@id/age"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/weight_box"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_toEndOf="@id/age"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:layout_below="@+id/name_box"
        android:layout_toEndOf="@id/weight"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/height_box"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_toEndOf="@id/weight"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relatorio"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:onClick="onClickRelatorio" />


</RelativeLayout>